<div class="container">
  <p id="notice"><%= notice %></p>

  <h2>依頼されたタスク一覧</h2>

  <div class="table-responsive">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th class="text-center">依頼元</th>
          <th class="text-center">タスクタイトル</th>
          <th class="text-center">メッセージ</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @submit_requests.each do |submit_request| %>
          <tr>
            <td class="text-left"><%= submit_request.user.name %></td>
            <td class="text-left"><%= link_to submit_request do %><%= submit_request.task.title %><% end %></td>
            <td class="text-left"><%= submit_request.message %></td>
            <td class="text-left">
              <%= link_to '承認する', approve_submit_request_path(submit_request, submit_request: {status: 2}), method: :patch, data: { confirm: '承認しますか？'}, class: 'btn btn-default btn-xs btn-success' %>
            </td>
            <td class="text-left">
              <%= link_to '却下する', reject_submit_request_path(submit_request, submit_request: {status: 9}), method: :patch, data: { confirm: '却下しますか？' }, class: 'btn btn-default btn-xs btn btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
