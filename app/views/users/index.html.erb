<div class="container">
  <h2>ユーザー</h2>
  <% @users.each do |user| %>
    <div class="container-child col-md-2 col-sm-4 col-xs-6">
      <%= link_to user_path(user) do %>
        <div style="max-width:50px;" %>
          <%= profile_img(user) %>
        </div>
      <% end %>
      <%= user.email %>
      <%= render 'follow_form', user: user %>
    </div>
  <% end %>
</div>
