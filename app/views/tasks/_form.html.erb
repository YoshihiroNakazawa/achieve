<%= form_for(@task) do |f| %>
  <%= f.error_messages! %>
  <div class="field">
    <%= f.hidden_field :user_id %><br>
    <%= f.hidden_field :charge_id %>
  </div>
  <div class="form-group">
    <%= f.label :タイトル %><br>
    <%= f.text_field :title, autofocus: true, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :内容 %><br>
    <%= f.text_area :content, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :期限 %><br>
    <%= f.datetime_select :deadline %>
  </div>
  <div class="form-group">
    <%= f.label :ステータス %><br>
    <%= f.select :status, Task.statuses.keys %>
  </div>
  <div class="actions">
    <%= f.submit '送信', class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
